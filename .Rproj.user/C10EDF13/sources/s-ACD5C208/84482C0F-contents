fallecidos_millon %>% 
  group_split(date) %>% 
  map(., ~arrange(., desc(value)) %>% 
        slice(1)) %>% 
  bind_rows() %>% 
  
  count(id) %>% 
  mutate(
    prop = prop.table(n),
    prop = round(prop, 3),
    dias = sum(n)
  ) %>% 
  arrange(prop) %>% 
  mutate(
    num = 1:nrow(.), 
    es = case_when(
      id == "Santa Cruz" ~ "Santa Cruz",
      T ~ "Otros"
    )
  )